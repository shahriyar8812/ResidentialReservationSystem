@model IEnumerable<Domain.Entities.Unit>

@{
    ViewData["Title"] = "صفحه اصلی";
    var complexes = ViewBag.Complexes as List<Domain.Entities.Complex>;
}

<div class="container">
    <h1 class="text-center my-5 animate__animated animate__fadeIn">سیستم رزرو اقامتگاه</h1>

    <!-- نمایش واحدها -->
    <h2 class="mt-5">واحدها</h2>
    @if (Model == null || !Model.Any())
    {
        <p class="text-muted">هیچ واحدی موجود نیست.</p>
    }
    else
    {
        <div class="row">
            @foreach (var unit in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="unit-card animate__animated animate__fadeInUp">
                        @if (unit.UnitImages != null && unit.UnitImages.Any())
                        {
                            <img src="@unit.UnitImages.First().ImageUrl" alt="@unit.Title" class="img-fluid" />
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/300x200?text=بدون+تصویر" alt="بدون تصویر" class="img-fluid" />
                        }
                        <div class="card-body">
                            <h5 class="card-title">@unit.Title</h5>
                            <p class="card-text"><strong>مجتمع:</strong> @(unit.Complex?.Name ?? "N/A")</p>
                            <p class="card-text"><strong>توضیحات:</strong> @unit.Description</p>
                            <p class="card-text"><strong>ظرفیت:</strong> @unit.Capacity</p>
                            <p class="card-text"><strong>تعداد اتاق‌خواب‌ها:</strong> @unit.BedroomCount</p>
                            <p class="card-text"><strong>موجود:</strong> @(unit.IsAvailable ? "بله" : "خیر")</p>
                            <a asp-action="UnitDetails" asp-route-id="@unit.Id" class="btn btn-primary">نمایش جزئیات</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- نمایش مجتمع‌ها در انتهای صفحه -->
    <h2 class="mt-5">کاوش مجتمع‌ها</h2>
    @if (complexes == null || !complexes.Any())
    {
        <p class="text-muted">هیچ مجتمعی موجود نیست.</p>
    }
    else
    {
        <div class="row">
            @foreach (var complex in complexes)
            {
                <div class="col-md-4 mb-4">
                    <div class="complex-card animate__animated animate__fadeInUp">
                        <div class="card-body">
                            <h5 class="card-title">@complex.Name</h5>
                            <p class="card-text"><strong>آدرس:</strong> @complex.Address</p>
                            <a asp-action="UnitsByComplex" asp-route-complexId="@complex.Id" class="btn btn-outline-primary">نمایش واحدها</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}